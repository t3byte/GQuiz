@page
@model GQuiz.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="auth-container">
    <div class="auth-card">
        <h1>Welcome Back</h1>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-error">@Model.ErrorMessage</div>
        }

        <form method="post">
            <div class="form-group">
                <label asp-for="Input.Identifier"></label>
                <input asp-for="Input.Identifier" class="form-control" placeholder="Enter email or username" />
                <span asp-validation-for="Input.Identifier" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" type="password" placeholder="Enter password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>

        <div class="auth-footer">
            Don't have an account? <a asp-page="/Signup">Sign up here</a>
        </div>
    </div>
</div>